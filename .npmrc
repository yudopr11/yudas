legacy-peer-deps=true
node-linker=hoisted
shamefully-hoist=true
fetch-retry-maxtimeout=60000
fetch-retry-mintimeout=20000
network-timeout=300000
# Bypass Rollup binary issues
@rollup/rollup-linux-x64-gnu:optional=true
@rollup/rollup-darwin-x64:optional=true
@rollup/rollup-win32-x64-msvc:optional=true
# Force using the latest version of Rollup that includes proper binary dependencies
rollup@*=3.29.4 